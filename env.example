# Database URLs
AUTH_DATABASE_URL="postgresql://postgres:password@localhost:5432/auth_db?schema=public"
BILLING_DATABASE_URL="postgresql://postgres:password@localhost:5433/billing_db?schema=public"
ORCHESTRATOR_DATABASE_URL="postgresql://postgres:password@localhost:5434/orchestrator_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# RabbitMQ
RABBITMQ_URL="amqp://guest:guest@localhost:5672"

# JWT
JWT_SECRET="your_secret_key"
JWT_EXPIRES_IN="24h"

# API Keys - ЗАМЕНИТЕ НА ВАШИ РЕАЛЬНЫЕ КЛЮЧИ

# OpenRouter API Key (формат: sk-or-v1-...)
# Получить можно на https://openrouter.ai/keys
# OpenRouter предоставляет доступ ко множеству моделей ИИ через единый API
OPENROUTER_API_KEY="sk-or-v1-your-openrouter-api-key-here"

# Service Ports
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
PROVIDER_ORCHESTRATOR_PORT=3002
PROXY_SERVICE_PORT=3003
BILLING_SERVICE_PORT=3004
ANALYTICS_SERVICE_PORT=3005
CLASSIFICATION_SERVICE_PORT=3006
CERTIFICATION_SERVICE_PORT=3007
SAFETY_SERVICE_PORT=3008

# File Upload Limits
# Максимальный размер файла для загрузки (50MB для аудио/видео)
BODY_SIZE_LIMIT=50mb

# Loginus OAuth Configuration
# Базовый URL Loginus OAuth сервера
LOGINUS_BASE_URL=https://loginus.startapus.com
# Client ID и Secret от администратора Loginus
LOGINUS_CLIENT_ID=787eedcfd4ca492563d7c0b08c12c3cc
LOGINUS_CLIENT_SECRET=15504832998d8faa235b1983ae93eaa78442ee7eb0309ddd9ed7b602e4110f78
# Redirect URI должен быть зарегистрирован в Loginus точно как указано здесь
# Для localhost: http://localhost:3000/v1/auth/callback
# Для production: https://your-domain.com/v1/auth/callback
LOGINUS_REDIRECT_URI=http://localhost:3000/v1/auth/callback
# URL фронтенда для редиректа после авторизации
FRONTEND_URL=http://localhost:80

# Service URLs for API Gateway
